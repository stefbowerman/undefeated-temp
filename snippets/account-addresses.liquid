{% paginate customer.addresses by 5 %}

<div id="AccountPage-Address" class="gridzor">

  <div class="grid__items accounts_wrap">
    
    {% comment %} <h2 class="h3">{{ 'customer.addresses.title' | t }}</h2> {% endcomment %}

    {% for address in customer.addresses %}
      {% comment %}
      {{ address | format_address }}
      <p>
        {{ 'customer.addresses.edit' | t | edit_customer_address_link: address.id }} |
        {{ 'customer.addresses.delete' | t | delete_customer_address_link: address.url }}
      </p>
      {% endcomment %}

      <div id="EditAddress_{{address.id}}" class="form-vertical">
        {% form 'customer_address', address %}

          <p class="edit-form-noise">Edit your shipping below.</p>
          <h2 class="h4">Shipping Address </h2>

          <label for="AddressCountry_{{form.id}}">{{ 'customer.addresses.country' | t }}</label>
          <select id="AddressCountry_{{form.id}}" class="input-full" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>

          <div class="grid">
            <div class="grid__item">
              <label for="AddressFirstName_{{form.id}}">{{ 'customer.addresses.first_name' | t }}</label>
              <input type="text" id="AddressFirstName_{{form.id}}" class="input-full" name="address[first_name]" value="{{form.first_name}}" placeholder="First Name" autocapitalize="words">
            </div>

            <div class="grid__item">
              <label for="AddressLastName_{{form.id}}">{{ 'customer.addresses.last_name' | t }}</label>
              <input type="text" id="AddressLastName_{{form.id}}" class="input-full" name="address[last_name]" value="{{form.last_name}}" placeholder="Last Name" autocapitalize="words">
            </div>
          </div>

          <label for="AddressCompany_{{form.id}}">{{ 'customer.addresses.company' | t }}</label>
          <input type="text" id="AddressCompany_{{form.id}}" class="input-full" name="address[company]" value="{{form.company}}" placeholder="Company" autocapitalize="words">

          <label for="AddressAddress1_{{form.id}}">{{ 'customer.addresses.address1' | t }}</label>
          <input type="text" id="AddressAddress1_{{form.id}}" class="input-full" name="address[address1]" value="{{form.address1}}" placeholder="Address 1" autocapitalize="words">

          <label for="AddressAddress2_{{form.id}}">{{ 'customer.addresses.address2' | t }}</label>
          <input type="text" id="AddressAddress2_{{form.id}}" class="input-full" name="address[address2]" value="{{form.address2}}" placeholder="Apartment, suite, etc. (optional)"   autocapitalize="words">

          <label for="AddressCity_{{form.id}}">{{ 'customer.addresses.city' | t }}</label>
          <input type="text" id="AddressCity_{{form.id}}" class="input-full" name="address[city]" value="{{form.city}}" placeholder="City" autocapitalize="words">

          <div class="grid halfsies">
            <div class="grid__item">
              <label for="AddressZip_{{form.id}}">{{ 'customer.addresses.zip' | t }}</label>
              <input type="text" id="AddressZip_{{form.id}}" class="input-full" name="address[zip]" value="{{form.zip}}" placeholder="Zip Code" autocapitalize="characters">
            </div>

            <div id="AddressProvinceContainer_{{form.id}}" class="grid__item">
              <label for="AddressProvince_{{form.id}}">{{ 'customer.addresses.province' | t }}</label>
              <select id="AddressProvince_{{form.id}}" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
            </div>
          </div>

          <div>
            <label for="AddressPhone_{{form.id}}">{{ 'customer.addresses.phone' | t }}</label>
            <input type="tel" id="AddressPhone_{{form.id}}" class="input-full" name="address[phone]" placeholder="Phone Number" value="{{form.phone}}">
          </div>
                 
        	{% comment %}
          <p class="set-default-addy">
            {{ form.set_as_default_checkbox }}
            <label for="address_default_address_new" style="display: block !important" class="inline">{{ 'customer.addresses.set_default' | t }}</label>
          </p>
        {% endcomment %}
        
          <p><input type="submit" class="btn-account" value="{{ 'customer.addresses.update' | t }}"></p>
          <!--<p><a href="#" onclick="Shopify.CustomerAddress.toggleForm({{form.id}}); return false;">{{ 'customer.addresses.cancel' | t }}</a></p>-->
        
          {% comment %} {{ 'customer.addresses.delete' | t | delete_customer_address_link: address.url }} {% endcomment %}
        {% endform %}
      </div>

    {% endfor %}

    {% if paginate.pages > 1 %}
      {% include 'pagination' %}
    {% endif %}
    
     <div id="AddAddress" class="form-vertical" style="display:none;">
      {% form 'customer_address', customer.new_address %}
        <h2 class="h3">{{ 'customer.addresses.add_new' | t }}</h2>
        <div class="grid">
          <div class="grid__item">
            <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
            <select id="AddressCountryNew" class="input-full" name="address[country]" data-default="{{form.country}}">{{ all_country_option_tags }}</select>
          </div>
          <div class="grid__item">
            <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
            <input type="text" id="AddressFirstNameNew" class="input-full" name="address[first_name]" value="{{form.first_name}}" placeholder="First Name" autocapitalize="words">
          </div>
          <div class="grid__item">
            <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
            <input type="text" id="AddressLastNameNew" class="input-full" name="address[last_name]" value="{{form.last_name}}" placeholder="Last Name" autocapitalize="words">
          </div>
        </div>
        <label for="AddressCompanyNew">{{ 'customer.addresses.company' | t }}</label>
        <input type="text" id="AddressCompanyNew" class="input-full" name="address[company]" value="{{form.company}}" placeholder="Company" autocapitalize="words">
        <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
        <input type="text" id="AddressAddress1New" class="input-full" name="address[address1]" value="{{form.address1}}" placeholder="Address" autocapitalize="words">
        <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
        <input type="text" id="AddressAddress2New" class="input-full" name="address[address2]" value="{{form.address2}}" placeholder="Apartment, suite, etc. (optional)" autocapitalize="words">
        
        <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
        <input type="text" id="AddressCityNew" class="input-full" name="address[city]" value="{{form.city}}" placeholder="City" autocapitalize="words">

        <div class="grid halfsies">
          <div class="grid__item">
            <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
            <input type="text" id="AddressZipNew" class="input-full" name="address[zip]" value="{{form.zip}}" placeholder="Zip Code" autocapitalize="characters">
          </div>
          <div class="grid__item" id="AddressProvinceContainerNew">
            <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
            <select id="AddressProvinceNew" class="input-full" name="address[province]" data-default="{{form.province}}"></select>
          </div>
        </div>
   
        <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
        <input type="tel" id="AddressPhoneNew" class="input-full" name="address[phone]" value="{{form.phone}}" placeholder="Phone Number">
        
        <p class="set-default-addy">
          {{ form.set_as_default_checkbox }}
          <label for="address_default_address_new" style="display: block !important;" class="inline">{{ 'customer.addresses.set_default' | t }}</label>
        </p>
        <p><input type="submit" class="btn-account cancel_add_new_address" value="{{ 'customer.addresses.add' | t }}"></p>
        <p><a href="#" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{{ 'customer.addresses.cancel' | t }}</a></p>
       
      {% endform %}
    </div>

  </div>



    <div id="add_new_form_btn" class="grid__items accounts_wrap"
    {% for address in customer.addresses %}
    {% if address %}
    style="display:none;"
    {% endif %}
    {% endfor %}>
      <p><a href="#" class="btn-account" onclick="Shopify.CustomerAddress.toggleNewForm(); return false;">{{ 'customer.addresses.add_new' | t }}</a></p>
      {% comment %}<p><a href="{{ routes.account_url }}" class="return-link">&larr; {{ 'customer.account.return' | t }}</a></p> {% endcomment %}
    </div>

 


</div>

<script>
  // Initialize observers on address selectors
  new Shopify.CountryProvinceSelector('AddressCountryNew', 'AddressProvinceNew', {
    hideElement: 'AddressProvinceContainerNew'
  });

  // Setup province selector on each customer address
  {% for address in customer.addresses %}
    new Shopify.CountryProvinceSelector('AddressCountry_{{address.id}}', 'AddressProvince_{{address.id}}', {
      hideElement: 'AddressProvinceContainer_{{address.id}}'}
    );
  {% endfor %}



  // Modified contents of customer_area.js (global asset)
  Shopify.CustomerAddress = {
    toggleForm: function(id) {
      var editEl = document.getElementById('EditAddress_'+id);
      editEl.style.display = editEl.style.display == 'none' ? '' : 'none';
      return false;
    },

    toggleNewForm: function() {
      //$('.add_new_form_btn').css('display','none');
      var el = document.getElementById('AddAddress');
      el.style.display = el.style.display == 'none' ? '' : 'none';
      var lala = document.getElementById('add_new_form_btn');
      lala.style.display = lala.style.display == 'none' ? '' : 'none';
      return false;
    },

    destroy: function(url, confirm_msg) {
      if (confirm(confirm_msg || "Are you sure you wish to delete this address?")) {
        Shopify.postLink(url, {'parameters': {'_method': 'delete'}});
      }
    }
  }
</script>

{% endpaginate %}
