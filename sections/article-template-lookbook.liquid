<!-- /templates/article.liquid -->

{% assign number_of_comments = article.comments_count %}

{% if comment and comment.created_at %}
  {% assign number_of_comments = article.comments_count | plus: 1 %}
{% endif %}

<div class="grids">
  <article class="grid__items article-lookbook" itemscope itemtype="http://schema.org/Article">

    <div class="grids top-col-imgs">
      {% if article.metafields.lookbook.image_1 %}
      <div class="half mob-2"> {{ article.metafields.lookbook.image_1 | img_tag  }} </div>
      {% endif %}
      {% if article.metafields.lookbook.image_2 %}
      <div class="half mob-4"> {{ article.metafields.lookbook.image_2 | img_tag }}</div>
      {% endif %}

      <header class="section-header mob-1">
        <h1>{{ article.title }}</h1>
      </header>

        <div class="content half mob-3" itemprop="articleBody"> {{ article.content }} </div>
        {% if article.metafields.lookbook.second_row_image %}
        <div class="half mob-5 smaller"> {{  article.metafields.lookbook.second_row_image | img_tag }} </div>
        {% endif %}
    </div>

    <div class="grids mid-col-imgs">
      {% if article.metafields.lookbook.mid_img_1 %}
      <div class="half"> {{ article.metafields.lookbook.mid_img_1 | img_tag  }} </div>
      {% endif %}
      {% if article.metafields.lookbook.mid_img_2 %}
      <div class="half"> {{ article.metafields.lookbook.mid_img_2 | img_tag }}</div>
      {% endif %}
    </div>

    <div class="grids stacked-col-imgs">
      {% if article.metafields.lookbook.top_image %}
      <div class="half smaller"> {{ article.metafields.lookbook.top_image | img_tag  }} </div>
      {% endif %}
      {% if article.metafields.lookbook.bottom_image %}
      <div class="half larger"> {{ article.metafields.lookbook.bottom_image | img_tag }}</div>
      {% endif %}
    </div>

    <div class="grids bot-col-imgs">
      {% if article.metafields.lookbook.bot_img_1 %}
      <div class="half"> {{ article.metafields.lookbook.bot_img_1 | img_tag  }} </div>
      {% endif %}
      {% if article.metafields.lookbook.bot_img_2 %}
      <div class="half"> {{ article.metafields.lookbook.bot_img_2 | img_tag }}</div>
      {% endif %}
    </div>

  </article>
</div>

{% comment %}
<hr class="hr--medium hr--clear">
<div class="text-center">
  <a href="{{ blog.url }}" class="return-link">&larr; {{ 'blogs.article.back_to_blog' | t: title: blog.title }}</a>
</div>
{% endcomment %}


