<!-- /templates/article.liquid -->

{% assign number_of_comments = article.comments_count %}

{% if comment and comment.created_at %}
  {% assign number_of_comments = article.comments_count | plus: 1 %}
{% endif %}

<div class="grids">
  <article class="grid__items article-interview" itemscope itemtype="http://schema.org/Article">


    <div class="grids top-col-imgs">
      <header class="section-header half mob-1">
        <h1>{{ article.title }}</h1>
      </header>

      <div class="content half lrg-copy content-spacing mob-3" itemprop="articleBody"> {{ article.content }} </div>

      {% if article.metafields.interview.top_img_1 %}
          <div class="half mob-2"> {{ article.metafields.interview.top_img_1 | img_tag  }} </div>
      {% endif %}
      {% if article.metafields.interview.top_img_2 %}
          <div class="half mob-4"> {{ article.metafields.interview.top_img_2 | img_tag }}</div>
      {% endif %}
    </div>

     <div class="grids interview">
    {% if article.metafields.interview.interview_part_1 %}
        <div class="interview-copy"> {{ article.metafields.interview.interview_part_1 }} </div>
    {% endif %}
    </div>

    <div class="grids mid-col-imgs">
    {% if article.metafields.interview.image_right %}
        <div class="half no-pad-vert"> {{ article.metafields.interview.image_right | img_tag  }} </div>
    {% endif %}
    {% if article.metafields.interview.image_left %}
        <div class="half no-pad-vert"> {{ article.metafields.interview.image_left | img_tag }}</div>
    {% endif %}
    {% if article.metafields.interview.image_left_bottom %}
        <div class="half no-pad-vert right-align"> {{ article.metafields.interview.image_left_bottom | img_tag }}</div>
    {% endif %}
    </div>

     <div class="grids interview">
    {% if article.metafields.interview.interview_part_2 %}
        <div class="interview-copy"> {{ article.metafields.interview.interview_part_1 }} </div>
    {% endif %}
    </div>

    <div class="grids">
    {% if article.metafields.interview.after_img_1 %}
        <div class="half"> {{ article.metafields.interview.after_img_1 | img_tag  }} </div>
    {% endif %}
    {% if article.metafields.interview.after_img_2 %}
        <div class="half"> {{ article.metafields.interview.after_img_2 | img_tag }}</div>
    {% endif %}
    </div>

     <div class="grids interview-quote">
    {% if article.metafields.interview.interview_quote %}
        <div class="half right-align quote lrg-copy"> {{ article.metafields.interview.interview_quote }} </div>
    {% endif %}
    </div>

    <div class="grids bot-col-imgs">
    {% if article.metafields.interview.bot_img_1 %}
        <div class="half init-img"> {{ article.metafields.interview.bot_img_1 | img_tag  }} </div>
    {% endif %}
    {% if article.metafields.interview.bot_img_2 %}
        <div class="half"> {{ article.metafields.interview.bot_img_2 | img_tag }}</div>
    {% endif %}
    </div>

    <div class="grids interview-footnotes">
    {% if article.metafields.interview.interview_footnotes %}
        <div class="footnotes"> {{ article.metafields.interview.interview_footnotes }} </div>
    {% endif %}
    </div>

  </article>
</div>



